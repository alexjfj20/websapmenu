# Variables de entorno para WebSAP Backend en producción

# Entorno 
NODE_ENV=production

# Puerto del servidor (Render lo asigna automáticamente)
PORT=8080

# JWT
JWT_SECRET=cambia_esta_clave_por_una_segura_en_produccion
JWT_EXPIRES_IN=24h

# Configuración de PostgreSQL para Render.com
# DATABASE_URL=postgres://username:password@host:port/database_name
# Esta variable será proporcionada automáticamente por Render

# Configuración de sincronización
SYNC_ENABLED=true
SYNC_INTERVAL=60000  # Intervalo de sincronización en milisegundos

# Configuración de correo (necesaria en producción)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=tu_correo@example.com
MAIL_PASSWORD=tu_contraseña_de_app
MAIL_FROM=tu_correo@example.com