{"ast":null,"code":"import { confirm } from '../services/dialogService';\nexport default {\n  name: 'BusinessInfoComponent',\n  data() {\n    return {\n      businessInfo: JSON.parse(localStorage.getItem('businessInfo')) || {\n        name: '',\n        logo: '',\n        contact: '',\n        description: '',\n        address: '',\n        email: '',\n        primaryColor: '#000000',\n        secondaryColor: '#ffffff',\n        hours: '',\n        specialty: '',\n        delivery: 'no'\n      },\n      showAdditionalInfo: false\n    };\n  },\n  methods: {\n    onLogoChange(event) {\n      const file = event.target.files[0];\n      if (file) {\n        const reader = new FileReader();\n        reader.onload = e => {\n          this.businessInfo.logo = e.target.result;\n        };\n        reader.readAsDataURL(file);\n      }\n    },\n    async saveBusinessInfo() {\n      localStorage.setItem('businessInfo', JSON.stringify(this.businessInfo));\n      alert('Business information saved!');\n    },\n    toggleAdditionalInfo() {\n      this.showAdditionalInfo = !this.showAdditionalInfo;\n    }\n  }\n};","map":{"version":3,"names":["confirm","name","data","businessInfo","JSON","parse","localStorage","getItem","logo","contact","description","address","email","primaryColor","secondaryColor","hours","specialty","delivery","showAdditionalInfo","methods","onLogoChange","event","file","target","files","reader","FileReader","onload","e","result","readAsDataURL","saveBusinessInfo","setItem","stringify","alert","toggleAdditionalInfo"],"sources":["F:\\Driver google\\VUE.JS-2\\temp\\websap\\src\\components\\BusinessInfoComponent.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <h2>Business Information</h2>\r\n    \r\n    <!-- Botón para mostrar/ocultar información adicional -->\r\n    <button @click=\"toggleAdditionalInfo\" class=\"toggle-button\">\r\n      {{ showAdditionalInfo ? 'Ocultar información adicional' : 'Mostrar información adicional' }}\r\n    </button>\r\n    \r\n    <form @submit.prevent=\"saveBusinessInfo\">\r\n      <div>\r\n        <label for=\"business-name\">Restaurant Name:</label>\r\n        <input type=\"text\" id=\"business-name\" v-model=\"businessInfo.name\" required>\r\n      </div>\r\n      <div>\r\n        <label for=\"business-logo\">Logo:</label>\r\n        <input type=\"file\" id=\"business-logo\" @change=\"onLogoChange\">\r\n        <img v-if=\"businessInfo.logo\" :src=\"businessInfo.logo\" alt=\"Business Logo\" style=\"max-width: 100px;\">\r\n      </div>\r\n      <div>\r\n        <label for=\"business-contact\">Contact:</label>\r\n        <input type=\"text\" id=\"business-contact\" v-model=\"businessInfo.contact\">\r\n      </div>\r\n      <div>\r\n        <label for=\"business-description\">Description:</label>\r\n        <textarea id=\"business-description\" v-model=\"businessInfo.description\"></textarea>\r\n      </div>\r\n      \r\n      <!-- Información adicional que se puede mostrar/ocultar -->\r\n      <div v-if=\"showAdditionalInfo\" class=\"additional-info\">\r\n        <h3>Información Adicional</h3>\r\n        <div>\r\n          <label for=\"business-address\">Address:</label>\r\n          <input type=\"text\" id=\"business-address\" v-model=\"businessInfo.address\">\r\n        </div>\r\n        <div>\r\n          <label for=\"business-email\">Email:</label>\r\n          <input type=\"email\" id=\"business-email\" v-model=\"businessInfo.email\">\r\n        </div>\r\n        <div>\r\n          <label for=\"primary-color\">Primary Color:</label>\r\n          <input type=\"color\" id=\"primary-color\" v-model=\"businessInfo.primaryColor\">\r\n        </div>\r\n        <div>\r\n          <label for=\"secondary-color\">Secondary Color:</label>\r\n          <input type=\"color\" id=\"secondary-color\" v-model=\"businessInfo.secondaryColor\">\r\n        </div>\r\n        <div>\r\n          <label for=\"business-hours\">Horario de Atención:</label>\r\n          <input type=\"text\" id=\"business-hours\" v-model=\"businessInfo.hours\" \r\n                 placeholder=\"Ej: Lun-Vie: 9am-5pm, Sáb-Dom: 10am-3pm\">\r\n        </div>\r\n        <div>\r\n          <label for=\"business-specialty\">Especialidad:</label>\r\n          <input type=\"text\" id=\"business-specialty\" v-model=\"businessInfo.specialty\">\r\n        </div>\r\n        <div>\r\n          <label for=\"business-delivery\">¿Ofrece delivery?</label>\r\n          <select id=\"business-delivery\" v-model=\"businessInfo.delivery\">\r\n            <option value=\"si\">Sí</option>\r\n            <option value=\"no\">No</option>\r\n          </select>\r\n        </div>\r\n      </div>\r\n      \r\n      <button type=\"submit\">Save Information</button>\r\n    </form>\r\n\r\n    <h3>Preview</h3>\r\n    <div style=\"border: 1px solid #ccc; padding: 10px;\">\r\n      <img v-if=\"businessInfo.logo\" :src=\"businessInfo.logo\" alt=\"Business Logo\" style=\"max-width: 100px;\">\r\n      <h2>{{ businessInfo.name }}</h2>\r\n      <p>{{ businessInfo.description }}</p>\r\n      <p>Contact: {{ businessInfo.contact }}</p>\r\n      \r\n      <!-- Vista previa de información adicional cuando está visible -->\r\n      <div v-show=\"showAdditionalInfo\" class=\"preview-additional-info\">\r\n        <h4>Información Adicional</h4>\r\n        <p v-if=\"businessInfo.address\">Dirección: {{ businessInfo.address }}</p>\r\n        <p v-if=\"businessInfo.email\">Email: {{ businessInfo.email }}</p>\r\n        <p v-if=\"businessInfo.hours\">Horario: {{ businessInfo.hours }}</p>\r\n        <p v-if=\"businessInfo.specialty\">Especialidad: {{ businessInfo.specialty }}</p>\r\n        <p v-if=\"businessInfo.delivery\">Delivery: {{ businessInfo.delivery === 'si' ? 'Disponible' : 'No disponible' }}</p>\r\n        \r\n        <div class=\"color-sample\" \r\n             :style=\"{backgroundColor: businessInfo.primaryColor, color: businessInfo.secondaryColor}\">\r\n          Muestra de colores (Fondo primario, Texto secundario)\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { confirm } from '../services/dialogService';\r\n\r\nexport default {\r\n  name: 'BusinessInfoComponent',\r\n  data() {\r\n    return {\r\n      businessInfo: JSON.parse(localStorage.getItem('businessInfo')) || {\r\n        name: '',\r\n        logo: '',\r\n        contact: '',\r\n        description: '',\r\n        address: '',\r\n        email: '',\r\n        primaryColor: '#000000',\r\n        secondaryColor: '#ffffff',\r\n        hours: '',\r\n        specialty: '',\r\n        delivery: 'no'\r\n      },\r\n      showAdditionalInfo: false\r\n    };\r\n  },\r\n  methods: {\r\n    onLogoChange(event) {\r\n      const file = event.target.files[0];\r\n      if (file) {\r\n        const reader = new FileReader();\r\n        reader.onload = (e) => {\r\n          this.businessInfo.logo = e.target.result;\r\n        };\r\n        reader.readAsDataURL(file);\r\n      }\r\n    },\r\n    async saveBusinessInfo() {\r\n      localStorage.setItem('businessInfo', JSON.stringify(this.businessInfo));\r\n      alert('Business information saved!');\r\n    },\r\n    toggleAdditionalInfo() {\r\n      this.showAdditionalInfo = !this.showAdditionalInfo;\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\nform div {\r\n  margin-bottom: 15px;\r\n}\r\n\r\nlabel {\r\n  display: block;\r\n  margin-bottom: 5px;\r\n  font-weight: bold;\r\n}\r\n\r\ninput, textarea, select {\r\n  width: 100%;\r\n  padding: 8px;\r\n  border: 1px solid #ddd;\r\n  border-radius: 4px;\r\n  box-sizing: border-box;\r\n}\r\n\r\nbutton[type=\"submit\"] {\r\n  background-color: #007bff;\r\n  color: white;\r\n  padding: 10px 15px;\r\n  border: none;\r\n  border-radius: 4px;\r\n  cursor: pointer;\r\n}\r\n\r\nbutton[type=\"submit\"]:hover {\r\n  background-color: #0056b3;\r\n}\r\n\r\n.toggle-button {\r\n  background-color: #4CAF50;\r\n  color: white;\r\n  padding: 10px 15px;\r\n  border: none;\r\n  border-radius: 4px;\r\n  cursor: pointer;\r\n  margin-bottom: 20px;\r\n  font-weight: bold;\r\n}\r\n\r\n.toggle-button:hover {\r\n  background-color: #45a049;\r\n}\r\n\r\n.additional-info {\r\n  background-color: #f9f9f9;\r\n  border-left: 4px solid #4CAF50;\r\n  padding: 15px;\r\n  margin: 20px 0;\r\n  border-radius: 4px;\r\n}\r\n\r\n.preview-additional-info {\r\n  margin-top: 15px;\r\n  padding: 10px;\r\n  background-color: #f9f9f9;\r\n  border-radius: 4px;\r\n}\r\n\r\n.color-sample {\r\n  padding: 15px;\r\n  margin-top: 10px;\r\n  border-radius: 4px;\r\n  text-align: center;\r\n  font-weight: bold;\r\n}\r\n</style>\r\n"],"mappings":"AA8FA,SAASA,OAAM,QAAS,2BAA2B;AAEnD,eAAe;EACbC,IAAI,EAAE,uBAAuB;EAC7BC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,YAAY,EAAEC,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,cAAc,CAAC,KAAK;QAChEN,IAAI,EAAE,EAAE;QACRO,IAAI,EAAE,EAAE;QACRC,OAAO,EAAE,EAAE;QACXC,WAAW,EAAE,EAAE;QACfC,OAAO,EAAE,EAAE;QACXC,KAAK,EAAE,EAAE;QACTC,YAAY,EAAE,SAAS;QACvBC,cAAc,EAAE,SAAS;QACzBC,KAAK,EAAE,EAAE;QACTC,SAAS,EAAE,EAAE;QACbC,QAAQ,EAAE;MACZ,CAAC;MACDC,kBAAkB,EAAE;IACtB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,YAAYA,CAACC,KAAK,EAAE;MAClB,MAAMC,IAAG,GAAID,KAAK,CAACE,MAAM,CAACC,KAAK,CAAC,CAAC,CAAC;MAClC,IAAIF,IAAI,EAAE;QACR,MAAMG,MAAK,GAAI,IAAIC,UAAU,CAAC,CAAC;QAC/BD,MAAM,CAACE,MAAK,GAAKC,CAAC,IAAK;UACrB,IAAI,CAACzB,YAAY,CAACK,IAAG,GAAIoB,CAAC,CAACL,MAAM,CAACM,MAAM;QAC1C,CAAC;QACDJ,MAAM,CAACK,aAAa,CAACR,IAAI,CAAC;MAC5B;IACF,CAAC;IACD,MAAMS,gBAAgBA,CAAA,EAAG;MACvBzB,YAAY,CAAC0B,OAAO,CAAC,cAAc,EAAE5B,IAAI,CAAC6B,SAAS,CAAC,IAAI,CAAC9B,YAAY,CAAC,CAAC;MACvE+B,KAAK,CAAC,6BAA6B,CAAC;IACtC,CAAC;IACDC,oBAAoBA,CAAA,EAAG;MACrB,IAAI,CAACjB,kBAAiB,GAAI,CAAC,IAAI,CAACA,kBAAkB;IACpD;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}