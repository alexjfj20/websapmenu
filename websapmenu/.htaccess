# === Vue.js SPA rewrite rules to prevent 404 and serve index.html ===
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /websapmenu/
  
  # No reescribir archivos o directorios existentes
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Servir index.html para todas las rutas de la SPA
  RewriteRule . /websapmenu/index.html [L]
</IfModule>